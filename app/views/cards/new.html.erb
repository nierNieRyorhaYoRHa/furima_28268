<%= render "shared/second-header"%>

<div class='transaction-contents'>
  <div class='transaction-main'>

    <%= form_with id: 'charge-form', class: 'transaction-form-wrap', url: user_cards_path(current_user.id), model:@card, method: :post, local: true do |f| %>
    <%# カード情報の入力 %>
      <div class='credit-card-form'>
        <div class='form-header'>
          <h1 class='form-header-text'>
            クレジットカード情報入力
          </h1>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">カード情報</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
          <div class='available-card'>
            <%= image_tag 'card-visa.gif', class: 'card-logo'%>
            <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
            <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
            <%= image_tag 'card-amex.gif', class: 'card-logo'%>
          </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">有効期限</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-expiration-date-wrap'>
            <%= f.text_area :exp_month, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
            <p>月</p>
            <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
            <p>年</p>
          </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">セキュリティコード</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :cvc, class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
        </div>
      </div>
    <%# /カード情報の入力 %>
      <div class='buy-btn'>
        <%= f.submit "カード情報を登録" ,class:"buy-red-btn" %>
      </div>
    <% end %>

        <%= form_with id: 'charge-form', class: 'transaction-form-wrap', model: @user , url: edit_user_path(current_user), method: :get, local: true do |f| %>
      <div class='form-header'>
        <h1 class='form-header-text'>
          本人情報
        </h1>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
        </div>
        <div class='input-name-wrap'>
          <h1><%= @user.nickname %></h1>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
        </div>
        <div class='input-name-wrap'>
          <h1><%= @user.email %></h1>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お名前(全角)</label>
        </div>
        <div class='input-name-wrap'>
        <h1><%= @user.last_name %> <%= @user.first_name %></h1>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お名前カナ(全角)</label>
        </div>
        <div class='input-name-wrap'>
            <h1><%= @user.last_name_kana %> <%= @user.first_name_kana %></h1>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">生年月日</label>
        </div>
        <div class='input-name-wrap'>
          <h1><%= @user.birthday %></h1>
        </div>
      </div>
      <div class='buy-btn'>
        <%= f.submit "本人情報の編集" ,class:"buy-red-btn" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/second-footer"%>